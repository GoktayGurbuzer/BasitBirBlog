<div class="card mb-3" id="kurs_@Model.Id">
    <div class="row">                   
        <div class="col-md-4">
            <img src="~/img/@Model.Image" alt="@Model.Title" class="img-fluid" width="300">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a asp-controller="Course" asp-action="Detail" asp-route-id="@Model.Id">
                    <h2 class="card-title">@Model.Title</h2>
                </a>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>    
    </div>  
</div> 